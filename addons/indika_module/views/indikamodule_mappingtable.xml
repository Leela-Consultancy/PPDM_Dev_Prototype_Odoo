<odoo>
    <data>
        <!-- Tree View -->
        <record id="indikamodule_mappingtable_tree_view" model="ir.ui.view">
            <field name="name">Mapping Table Tree</field>
            <field name="model">indikamodule.mappingtable</field>
            <field name="arch" type="xml">
                <tree string="Mapping Table">
                    <!-- Fields to display in the tree view -->
                    <field name="name"/>
                    <field name="cookie_data_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="indikamodule_mappingtable_action" model="ir.actions.act_window">
            <field name="name">Mapping Table</field>
            <field name="res_model">indikamodule.mappingtable</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="indikamodule_menu" name="INDIKA Module" sequence="1"/>
        <menuitem id="indikamodule_mappingtable_menu"
                  name="Mapping Table" action="indikamodule_mappingtable_action"
                  parent="indikamodule_menu" sequence="2"/>
    </data>
</odoo>
